extend ./layout.pug

block content
  .container
    .row
      .col-sm-1
      .col-sm-8.custombackground
        .row
          .col-sm-7.text-center 
            h5 Title                
          .col-sm-3.text-left 
            h5 Author       
          .col-sm-2.text-right
            a.btn.btn-primary(href='/admin/create') Post
        each topic in topics
          a(href='/chat/'+ topic.id style='text-decoration: none')
              .card.mb-3(style='max-width: 640px;')
                .row.no-gutters 
                    .col-md-3
                        img.card-img(src=topic.image alt=topic.title)
                    .col-md-7
                      .card-body
                        h5.card-title=topic.title
                        p.card-text
                          small.text-muted Last updated #{topic.times} mins ago
                    .col-md-2
                        h5 #{topic.author.username}
      .col-sm-3.test
        .row
          .col-sm
            .card
              .card-body
                img.rounded-circle(src='user.image' alt='user.username' width='100' height='80')
                h5.card-title username
                p.card-text Blogs:
                a.btn.btn-primary(href='#') SignIn
                a.btn.btn-primary.float-right(href='#') SignUp
  
